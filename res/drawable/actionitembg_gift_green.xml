<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/gift_green_darker"
                android:endColor="@color/gift_green_darker"
                android:angle="270" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/gift_green"
                android:endColor="@color/gift_green_darker"
                android:angle="270" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@android:color/transparent"
                android:endColor="@android:color/transparent"
                android:angle="270" />
        </shape>
    </item>
</selector>